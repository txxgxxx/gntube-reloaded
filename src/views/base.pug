include mixins/message

doctype html 
html(lang="ko")
    head
        title   #{pageTitle} | #{siteName}
        link(rel="icon", style="border-radius:50%;", href="https://lh3.google.com/u/0/d/1sD0ELJke57isx-isWPLOz6aEeBi-vKVi=w2576-h1372-iv2")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet", href="/goods/css/styles.css")
    body 
        if messages.info
            +message("info", messages.info)
        if messages.error
            +message("error", messages.error)
        if messages.success
            +message("success", messages.success)
        include partials/header.pug
        main
            block content
        include partials/footer.pug 
    script(src="/goods/js/main.js")
    block scripts