header 
    a(href="/").header__logo
        img(src="https://lh3.google.com/u/0/d/1sD0ELJke57isx-isWPLOz6aEeBi-vKVi=w2576-h1372-iv2")
    nav 
        ul 
            li 
                a(href="/search")
                    i.fas.fa-search
            if loggedIn 
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/users/edit") Edit Profile
                li      
                    a(href="/users/logout") Log Out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            img.header__avatar(src="https://source.unsplash.com/random")
                        else
                            if loggedInUser.avatarUrl[0] == 'h'
                                img.header__avatar(src=loggedInUser.avatarUrl).avatar
                            else
                                img.header__avatar(src="/" + loggedInUser.avatarUrl).avatar
            else
                li 
                    a(href="/login") Login Here.
                li 
                    a(href="/join").header__btn Join