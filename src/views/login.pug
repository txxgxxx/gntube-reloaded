extends base


block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Usernane",name="username", type="text", required)
        input(placeholder="Password",name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=2fffa16999207bba8648&scope=") Continue with Github &rarr;
    hr
    div 
        span Dont't have an account? 
        a(href="/join") Create one now &rarr;